<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <img src="<%=asset_path 'logo.png' %>" class="image">
      <div class="content">
        Log-in to your account
      </div>
    </h2>
     <%= form_tag session_path, class: "ui large form" do %>
      <div class="ui stacked segment">
       
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
             <%= email_field_tag :email %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= password_field_tag :password %>
          </div>
        </div>
        <div ><%= submit_tag "Log In", class: "ui fluid large teal submit button" %></div>
      </div>
      <div class="ui error message"></div>
    <% end %>
    <div class="ui message">
      New to us? <%= link_to "Sign Up", new_user_path, class: "ui blue label" %>
    </div>
  </div>
</div>
  
