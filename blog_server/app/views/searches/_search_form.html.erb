<%= form_tag(searches_result_path, method: "get", class: "form-inline my-2 my-lg-0", ) do %>
    <%= text_field_tag(:search_text) %> 
    <%= hidden_field_tag(:bulletin, "#{post}") %>
    <%= hidden_field_tag(:param_contents, "#{post}") %>
    <%= submit_tag("Search", class: "btn btn-outline-success my-2 my-sm-0") %>
<% end %>