<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<h2 class="ui brown header">Sign Up Page</h2>
  <div class="ui large form">
    <%= form_for @user do |f| %>
    <div class="ui stacked segment">
        <div class="field">
          <h3><%= f.label :first_name %></h3>
          <%= f.text_field :first_name, placeholder: "First Name"%>
      </div>
        <div class="field">
            <h3><%= f.label :last_name %></h3>
            <%= f.text_field :last_name, placeholder: "Last Name"%>
      </div>
      <div class="field">
            <h3><%= f.label :email %></h3>
            <%= f.email_field :email, placeholder: "E-mail Address" %>
      </div>
      <div class="field">
            <h3><%= f.label :password %></h3>
          <%= f.password_field :password, placeholder: "Password" %>
      </div>
        <div class="field">
            <h3><%= f.label :password_confirmation %></h3>
          <%= f.password_field :password_confirmation, placeholder: "Password Again" %>
        </div>
      </div>
      <div ><%= f.submit "Submit", class: "ui fluid large teal submit button" %></div>
    </div>
  <% end %>
  
  

